@page
@model InstrumentShop.Pages.Admin.Products.CreateModel
@{
}

<div class="row">
    <div class="col-lg-12 mb-5">
        <div class="card">
            <div class="card-header">
                <h3 class="h6 text-uppercase mb-0">Lägg till ny kurs</h3>
            </div>
            <div class="card-body">
                <form method="post" enctype="multipart/form-data">
                    <div class="form-group">
                        <label asp-for="Namn">Titel:</label>
                        <input class="form-control" asp-for="Namn">
                        <span asp-validation-for="Namn" class="field-validation-error"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Selected">Kategori: </label>
                        <select asp-for="Selected"
                                class="form-control"
                                asp-items="@Model.Lista"></select>
                        <span asp-validation-for="Selected" class="field-validation-error"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Pris">Pris: </label>
                        <input class="form-control" asp-for="Pris">
                        <span asp-validation-for="Pris" class="field-validation-error"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Beskrivning">Beskrvinging av produkt: </label>
                        <input class="form-control" asp-for="Beskrivning">
                        <span asp-validation-for="Beskrivning" class="field-validation-error"></span>
                    </div>
                    <button type="submit" class="btn btn-primary">Spara</button>
                </form>
            </div>

        </div>

    </div>
</div>